<h1>Listing posts</h1>

<table>
  <tr>
    <th>Body</th>
    <th>User</th>
    <th>Reply to</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>City</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.body %></td>
    <td><%= post.user_id %></td>
    <td><%= post.reply_to_id %></td>
    <td><%= post.latitude %></td>
    <td><%= post.longitude %></td>
    <td><%= post.city %></td>
    <td><%= post.country %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

