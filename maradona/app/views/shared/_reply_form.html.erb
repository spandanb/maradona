<%= form_for(@reply) do |f| %>
  <div class="field post-form">
    <%= f.text_area :content, placeholder: "Reply...", :size=>"50*1" %>
  </div>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :post_id %>
  <%= f.hidden_field :reply_id %>
  <%= f.submit "Reply", class: "btn btn-large btn-primary" %>
<% end %>
