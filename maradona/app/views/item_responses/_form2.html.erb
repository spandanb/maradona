<%= form_for(response) do |f| %>
  <div class="field" style="display:inline">
		<%= f.hidden_field :user_id %>
		<%= f.hidden_field :item_id %>
		
		<%= f.label :message %>
		<%= f.text_area :message, :size => "30x1"%>
		
	</div>
	<div class="actions" style="display:inline">
  	<%= f.submit %>
	</div>
<% end %>

